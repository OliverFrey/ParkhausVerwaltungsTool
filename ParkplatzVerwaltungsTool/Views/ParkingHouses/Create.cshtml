@model ParkplatzVerwaltungsTool.Models

@{
    ViewData["Title"] = "Parkhaus erstellen";
}

<h1>Parkhaus erstellen</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="name">Parkhausname:</label>
                <input asp-for="ParkingHouse.ParkingHouseName" class="form-control" />
                <span asp-validation-for="ParkingHouse.ParkingHouseName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label for="name">Parkhausname:</label>
                <input asp-for="ParkingHouseLevels" class="form-control" />
                <span asp-validation-for="ParkingHouseName" class="text-danger"></span>
            </div>*@

            <button type="button" onclick="addLevel()">Add Level</button>
            <div id="levels"></div>

            <div>
                <input type="submit" value="Parkhaus speichern" formaction="Provider/Save" formmethod="post" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    <script type="text/javascript">
        function addLevel() {
            // Create a new div element for the level
            var levelDiv = document.createElement("div");
            levelDiv.id = "level" + levelCount;

            // Create a label for the level name
            var levelLabel = document.createElement("label");
            levelLabel.innerHTML = "Level Name:";
            levelDiv.appendChild(levelLabel);

            // Create an input element for the level name
            var levelNameInput = document.createElement("input");
            levelNameInput.type = "text";
            levelNameInput.name = "levelName" + levelCount;
            levelDiv.appendChild(levelNameInput);

            // Create a button to add places to the level
            var addPlaceButton = document.createElement("button");
            addPlaceButton.innerHTML = "Add Place";
            addPlaceButton.onclick = function () { addPlace(levelDiv.id); };
            levelDiv.appendChild(addPlaceButton);

            // Add the level div to the form
            document.getElementById("levels").appendChild(levelDiv);

            levelCount++;
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}