@model ParkplatzVerwaltungsTool.Models.ParkingHouseViewModel

@{
    ViewData["Title"] = "Parkhaus bearbeiten";
}

<h1>Parkhaus bearbeiten</h1>

<h4>Parkhaus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkingHouses.ParkingHouseId" />
            <div class="form-group">
                <label for="name">Parkhausname:</label>
                <input asp-for="ParkingHouses.ParkingHouseName" class="form-control" />
                <span asp-validation-for="ParkingHouses.ParkingHouseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="name">Parkhauslevel:</label>
                <input asp-for="ParkingHouseLevels.ParkingHouseLevelName" class="form-control" />
                <span asp-validation-for="ParkingHouseLevels.ParkingHouseLevelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="name">Parkhausplatz:</label>
                <input asp-for="ParkingPlaces.ParkingPlaceNumber" class="form-control" />
                <span asp-validation-for="ParkingPlaces.ParkingPlaceNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
